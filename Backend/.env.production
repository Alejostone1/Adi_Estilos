# ==============================================================================
# ADI ESTILOS - CONFIGURACIÓN DE PRODUCCIÓN (Render)
# ==============================================================================
# ⚠️ NO COMMITEAR ESTE ARCHIVO AL REPOSITORIO
# ⚠️ Este archivo contiene credenciales sensibles

# ==============================================================================
# SERVIDOR
# ==============================================================================
NODE_ENV=production
PORT=3000

# ==============================================================================
# BASE DE DATOS - PostgreSQL Render
# ==============================================================================
# Configurar desde el dashboard de Render: Settings > Environment Variables
# DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# ==============================================================================
# CORS - Producción (DOMINIOS ESPECÍFICOS)
# ==============================================================================
# Agregar el dominio de producción de Vercel
CORS_ORIGIN=https://adi-estilos-frontend.vercel.app

# ==============================================================================
# JWT - PRODUCCIÓN (OBLIGATORIO GENERAR NUEVO)
# ==============================================================================
# Generar con: openssl rand -base64 32
# JWT_SECRET=genera_un_valor_seguro_aqui

JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================================================
# ALMACENAMIENTO HÍBRIDO - PRODUCCIÓN
# ==============================================================================
# Modo: hybrid (recomendado para producción)
STORAGE_MODE=hybrid

# Cloudinary - CONFIGURAR DESDE DASHBOARD DE CLOUDINARY
# CLOUDINARY_CLOUD_NAME=tu_cloud_name
# CLOUDINARY_API_KEY=tu_api_key
# CLOUDINARY_API_SECRET=tu_api_secret

# En producción, forzar uso de Cloudinary
USE_CLOUDINARY=true

# ==============================================================================
# LÍMITES Y CONFIGURACIÓN
# ==============================================================================
MAX_IMAGE_SIZE=5242880
UPLOAD_PATH=/tmp/uploads
BASE_URL=https://adiestilos-backend.onrender.com

# ==============================================================================
# RATE LIMITING - Producción
# ==============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# LOGGING - Producción
# ==============================================================================
LOG_LEVEL=error
