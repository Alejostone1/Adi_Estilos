# ==============================================================================
# ADI ESTILOS - PRODUCCIÓN (RENDER)
# ==============================================================================

NODE_ENV=production
PORT=3000

# ==============================================================================
# BASE DE DATOS - NEON (OBLIGATORIO EN PRODUCCIÓN)
# ==============================================================================
# Configurar en Render > Settings > Environment Variables
DATABASE_URL=postgresql://neondb_owner:TU_PASSWORD@ep-xxxxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ==============================================================================
# CORS - PRODUCCIÓN
# ==============================================================================
CORS_ORIGIN=https://adi-estilos-frontend.vercel.app

# ==============================================================================
# JWT - PRODUCCIÓN (GENERAR SECRETO SEGURO)
# ==============================================================================
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GENERAR_VALOR_SEGURO
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================================================
# ALMACENAMIENTO - CLOUDINARY
# ==============================================================================
STORAGE_MODE=hybrid

CLOUDINARY_CLOUD_NAME=dm5qezkoc
CLOUDINARY_API_KEY=TU_API_KEY
CLOUDINARY_API_SECRET=TU_API_SECRET

USE_CLOUDINARY=true

# ==============================================================================
# CONFIGURACIÓN GENERAL
# ==============================================================================
MAX_IMAGE_SIZE=5242880
UPLOAD_PATH=/tmp/uploads
BASE_URL=https://adiestilos-backend.onrender.com

# ==============================================================================
# RATE LIMIT
# ==============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=error