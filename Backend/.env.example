# ==============================================================================
# ADI ESTILOS - PLANTILLA DE CONFIGURACIÓN
# ==============================================================================
# Copia este archivo como .env y completa los valores
# NO commitees archivos .env con credenciales reales

# ==============================================================================
# SERVIDOR
# ==============================================================================
NODE_ENV=development
PORT=3000

# ==============================================================================
# BASE DE DATOS - PostgreSQL
# ==============================================================================
DATABASE_URL=postgresql://postgres:tu_contraseña@localhost:5432/adiestilos?schema=public

# Para producción (Render), usa la URL que te proporciona Render:
DATABASE_URL=postgresql://user:password@host.render.internal:5432/database?schema=public

CORS_ORIGIN=http://localhost:5173

JWT_SECRET=cambiar_en_produccion_genera_con_openssl_rand_base64_32
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

STORAGE_MODE=hybrid

CLOUDINARY_CLOUD_NAME=demo  # Tu cloud name de Cloudinary (ejemplo: dm5qezkoc)
CLOUDINARY_API_KEY=

USE_CLOUDINARY=false  # true en producción, false en desarrollo local if no hay credenciales Cloudinary completas disponibles.

MAX_IMAGE_SIZE =5242880
UPLOAD_PATH=uploads
BASE_URL=http://localhost :3000

RATE_LIMIT_WINDOW_MS =900000
RATE_LIMIT_MAX_REQUESTS =100

LOG_LEVEL =debug
